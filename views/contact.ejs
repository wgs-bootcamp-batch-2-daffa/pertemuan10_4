<%- contentFor('navbar') %>
  <!-- begin::Navbar -->
  <%- include('layouts/navbar') %>
    <%- contentFor('root') %>
      <!-- end::Navbar -->
      <!-- begin::Content -->
      <div id="contact" class="row">
        <!-- begin::Title -->
        <div class="row my-5">
          <h1>
            <%= data.title %>
          </h1>
        </div>
        <!-- end::Title -->
        <!-- begin::Table -->
        <div class="row">
          <!-- begin::Table-title -->
          <div class="row my-3">
            <h4>
              Contact lists
            </h4>
          </div>
          <!-- end::Table-title -->
          <!-- begin::Add-Contact -->
          <a href="/contact/add">
            <button type="button" class="btn btn-primary btn-sm col-1">Add Contact</button>
          </a>
          <!-- end::Add-Contact -->
          <div class="col-6">
            <table class="table table-responsive table-hover">
              <thead>
                <tr>
                  <th scope="col-2">No</th>
                  <th scope="col-3">Name</th>
                  <th scope="col-3">Email</th>
                  <th scope="col-3">Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (data.contact.length===0) { %>
                  <!-- begin::Empty-Data -->
                  <tr>
                    <td colspan="3" class="text-center">Contact is empty</td>
                  </tr>
                  <!-- end::Empty-Data -->
                  <% } %>
                    <% data.contact.forEach((e,i)=> { %>
                      <% i++ %>
                        <tr>
                          <th scope="row">
                            <%= i %>
                          </th>
                          <td>
                            <%= e.Name %>
                          </td>
                          <td>
                            <%= e.Email %>
                          </td>
                          <td>
                            <a href="/contact/<%= e.Name %>">
                              <button type="button" class="btn btn-info badge rounded-pill">Details</button>
                            </a>
                          </td>
                        </tr>
                        <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- end::Table -->
      </div>
      <!-- end::Content -->