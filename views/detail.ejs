<%- contentFor('navbar') %>
    <%- include('layouts/navbar') %>
        <%- contentFor('root') %>
            <!-- begin::Content -->
            <div class="row">
                <!-- begin::Title -->
                <div class="row mt-5 mb-2">
                    <h1>
                        <%= data.title %>
                    </h1>
                </div>
                <!-- end::Title -->
                <!-- begin::Card -->
                <div class="row px-4">
                    <% if (data.contact===undefined) { %>
                        <div class="alert alert-danger text-center" role="alert">
                            <%= data.name %> is no exists
                        </div>
                        <% } else { %>
                            <div class="card mt-5" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= data.contact.Name %>
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <%= data.contact.Phone %>
                                    </h6>
                                    <p class="card-text">
                                        <%= data.contact.Email %>
                                    </p>
                                    <form action="/contact/form-update/<%= data.contact.Name %>" method="get"
                                        class="d-inline">
                                        <button type="submit" class="btn btn-info badge rounded-pill">Edit</button>
                                    </form>
                                    <form action="/contact/delete/<%= data.contact.Name %>" method="get"
                                        class="d-inline">
                                        <input type="hidden" name="name" value="<%= data.contact.Name %> ">
                                        <button type="submit" class="btn btn-danger badge rounded-pill"
                                            onclick='confirm(`Sure?`)'>Delete</button>
                                    </form>
                                </div>
                            </div>
                            <% } %>
                </div>
                <!-- end::Card -->
                <!-- begin::Back-Button -->
                <a href="/contact">
                    <button type="button" class="btn btn-danger btn-sm col-1 mt-3">Back</button>
                </a>
                <!-- end::Back-Button -->
            </div>
            <!-- end::Content -->